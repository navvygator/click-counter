.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.text-center {
  text-align: center;
}

.text-title {
  font-family: "Gloria Hallelujah";
}

.text-white {
  color: white;
}

.text-accent {
  color: #d64933;
}

.section {
  height: 100vh;
  padding: 16px;
}

.home {
  padding-top: 50px;
}

.container {
  margin: auto;
  max-width: 800px;
  height: 100%;
}

.card {
  padding: 2rem;
  background: white;
}

.card-narrow {
  width: 200px;
}

.standard-border {
  border: 1px solid #58a4b0;
}

.shadow,
.btn-primary,
.btn-secondary {
  box-shadow: 2px 2px 4px 0 rgba(0, 0, 0, 0.3);
}

.fancy-input {
  background: rgba(0, 0, 0, 0.04);
  border: 1px solid rgba(0, 0, 0, 0);
  outline: none;
  height: 34px;
  width: 100%;
  padding: 8px;
  box-sizing: border-box;
}

.fancy-input:focus {
  background: rgba(0, 0, 0, 0);
  border: 1px solid #58a4b0;
}

.bg-primary {
  background-color: #58a4b0;
}

.bg-secondary {
  background-color: #0c7c59;
}

.bg-tertiary {
  background-color: #bac1b8;
}

.br-rounded,
.btn-primary,
.btn-secondary,
.fancy-input,
.card {
  border-radius: 8px;
}

.btn-primary,
.btn-secondary {
  cursor: pointer;
  border: none;
  min-width: 100px;
  height: 36px;
  line-height: 36px;
}

.btn-primary {
  color: white;
  background: #58a4b0;
}

.btn-secondary {
  background: white;
  color: #58a4b0;
}

.d-block {
  display: block;
}

.m-t {
  margin-top: 1rem;
}

.m-r {
  margin-right: 1rem;
}

.p-t {
  padding-top: 1rem;
}

.navigation {
  height: 50px;
  background: #58a4b0;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 0 10px;
}

.navigation .navigation-item {
  margin: auto;
  text-align: center;
  padding: 15px;
}

.navigation .navigation-item:hover {
  color: burlywood;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: cover;
}

.info {
  border-bottom: 1px solid #58a4b0;
  padding: 8px 0;
}

.justify-center {
  justify-content: center
}

.info-key {
  color: #bac1b8;
  margin-right: 5px;
}
